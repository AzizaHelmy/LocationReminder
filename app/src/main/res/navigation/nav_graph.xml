<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authenticationFragment">

    <fragment
        android:id="@+id/reminderListFragment"
        android:name="com.udacity.project4.ui.reminderlist.ReminderListFragment"
        android:label="Reminder List"
        tools:layout="@layout/fragment_reminder_list" >
        <action
            android:id="@+id/action_reminderListFragment_to_saveReminderFragment"
            app:destination="@id/addReminderFragment" />
        <action
            android:id="@+id/action_reminderListFragment_to_reminderDescriptionFragment"
            app:destination="@id/reminderDescriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectLocationFragment"
        android:name="com.udacity.project4.ui.selectreminderlocation.SelectLocationFragment"
        android:label="Select Location"
        tools:layout="@layout/fragment_select_location" />
    <fragment
        android:id="@+id/addReminderFragment"
        android:name="com.udacity.project4.ui.addreminder.AddReminderFragment"
        android:label="Add Reminder"
        tools:layout="@layout/fragment_add_reminder" >
        <action
            android:id="@+id/action_saveReminderFragment_to_selectLocationFragment"
            app:destination="@id/selectLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/authenticationFragment"
        android:name="com.udacity.project4.ui.authentication.AuthenticationFragment"
        android:label="Authentication"
        tools:layout="@layout/fragment_authentication" >
        <action
            android:id="@+id/action_authenticationFragment_to_reminderListFragment"
            app:destination="@id/reminderListFragment" />
    </fragment>
    <fragment
        android:id="@+id/reminderDescriptionFragment"
        android:name="com.udacity.project4.ui.reminderdetail.ReminderDescriptionFragment"
        android:label="Reminder Description"
        tools:layout="@layout/fragment_reminder_description" />
</navigation>